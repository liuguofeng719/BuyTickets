<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/ly_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingRight="@dimen/common_padding"
        android:paddingLeft="@dimen/common_padding"
        >
        <TextView
            android:id="@+id/tv_trade_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平台支付"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:layout_marginBottom="6dp"
            />

        <TextView
            android:id="@+id/tv_trade_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="03-12 12:50"
            android:layout_marginBottom="6dp"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_trade_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_trade_type"
            android:text="余额 ￥800"
            android:textColor="@color/text_color_hint"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_trade_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_trade_date"
            android:text="+200"
            android:textColor="@color/common_text_color"
            android:textSize="18sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_line_color"
    />
</LinearLayout>
