<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:background="@color/button_text_color"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/header" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_padding"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/common_padding"
            android:paddingTop="@dimen/common_padding"
            android:textSize="16sp"
            android:textColor="@color/text_color_hint"
            android:text="应付金额:"
        />
        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="￥45.00元"
            android:textColor="@color/text_price_color"
        />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_line_color"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
            <TextView
            android:id="@+id/tv_pay_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_padding"
            android:paddingTop="@dimen/common_padding"
            android:text="请选择支付方式"
            android:textSize="16sp"
            android:textColor="@color/text_color_hint"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        >
        <LinearLayout
            android:id="@+id/ly_weixin_pay"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:descendantFocusability="blocksDescendants"
            >
            <ImageView
                android:id="@+id/iv_weixin_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/weixin"
                android:layout_marginBottom="10dp"
                android:textColor="@color/text_color"
            />
            <TextView
                android:id="@+id/tv_weixin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信钱包"
                android:textSize="14sp"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_bao_pay"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:descendantFocusability="blocksDescendants"
            >
            <ImageView
                android:id="@+id/iv_bao_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/paybao"
                android:layout_marginBottom="10dp"
            />
            <TextView
                android:id="@+id/tv_bao_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textSize="14sp"
                android:textColor="@color/text_color"
            />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:background="@color/bg_line_color"
    />
</LinearLayout>