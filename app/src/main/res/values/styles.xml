<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="@android:style/Theme.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/t_AnimationActivity</item>
    </style>

    <style name="t_AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
    <!--<style name="animation_translucent_translate" parent="@android:style/Animation.Translucent">-->
        <!--<item name="android:windowEnterAnimation">@anim/activity_open_in_anim</item>-->
        <!--<item name="android:windowExitAnimation">@anim/activity_open_out_anim</item>-->
    <!--</style>-->
    <style name="Theme.SmoothProgressBarDefaults" parent="Theme.AppCompat">
        <item name="cpbStyle">@style/CircularProgressBar</item>
    </style>

    <style name="CPB" parent="Widget.AppCompat.ProgressBar" />

    <style name="loadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/alpha_05_black</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="myDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="dialog_animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <!-- checkbox -->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <style name="CircularProgressBar" parent="CPB">
        <item name="cpb_color">@color/cpb_default_color</item>
        <item name="cpb_stroke_width">@dimen/cpb_default_stroke_width</item>
        <item name="cpb_min_sweep_angle">@integer/cpb_default_min_sweep_angle</item>
        <item name="cpb_max_sweep_angle">@integer/cpb_default_max_sweep_angle</item>
        <item name="cpb_sweep_speed">@string/cpb_default_sweep_speed</item>
        <item name="cpb_rotation_speed">@string/cpb_default_rotation_speed</item>
    </style>

    <style name="header_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">22dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="menu_common">
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@drawable/ticket_selector_color</item>
        <item name="android:scaleX">0.9</item>
        <item name="android:scaleY">0.9</item>
    </style>

    <style name="rdo_ticket" parent="menu_common">
        <item name="android:drawableTop">@drawable/ticket_selector_img</item>
        <item name="android:text">@string/main_rdo_ticket</item>
        <item name="android:checked">true</item>
    </style>

    <style name="rdo_order" parent="menu_common">
        <item name="android:drawableTop">@drawable/order_selector_img</item>
        <item name="android:text">@string/main_rdo_order</item>
    </style>

    <style name="rdo_my" parent="menu_common">
        <item name="android:drawableTop">@drawable/my_selector_img</item>
        <item name="android:text">@string/main_rdo_my</item>
    </style>

    <style name="frequencyTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- android-segmented-control -->
    <style name="RadioButton">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

</resources>